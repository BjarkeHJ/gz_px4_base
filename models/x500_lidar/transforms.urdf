<?xml version="1.0"?>
<robot name="x500_lidar_transforms">

  <!-- Base frame (must match your SDF link name) -->
  <link name="base_link"/>

  <!-- Lidar frame, matching gz_frame_id -->
  <link name="lidar_sensor_link"/>

  <!-- Static transform: base_link -> lidar_sensor_link -->
  <joint name="lidar_sensor_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_sensor_link"/>
    <!-- xyz [m], rpy [rad] -->
    <origin xyz="0.15 0.0 0.01" rpy="0.0 0.0 0.0"/>
  </joint>

</robot>
